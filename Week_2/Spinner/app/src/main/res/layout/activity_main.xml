<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.chinjs1.spinner.MainActivity"
    android:weightSum="1">

    <TextView
        android:text="Enrol for Music Lessons!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:id="@+id/tvTitle"
        android:textSize="30sp"
        android:textAllCaps="false" />

    <TextView
        android:text="Choose an instrument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/tvHeader1"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle" />

    <TextView
        android:text="When do you want to start?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgInstruments"
        android:layout_alignStart="@+id/rgInstruments"
        android:layout_marginTop="24dp"
        android:id="@+id/tvHeader2"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/monthSpinner" />

    <Button
        android:text="ENROL ME!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:id="@+id/btnEnrol"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/rgInstruments"
        android:layout_below="@+id/tvHeader1"
        android:layout_alignStart="@+id/tvHeader1"
        android:checkedButton="@+id/rbSaxaphone">

        <RadioButton
            android:text="Saxaphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbSaxaphone"
            android:textSize="18sp" />

        <RadioButton
            android:text="Bass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbBass"
            android:layout_weight="1"
            android:textSize="18sp" />

        <RadioButton
            android:text="Violin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbViolin"
            android:layout_weight="1"
            android:textSize="18sp" />
    </RadioGroup>

</RelativeLayout>
