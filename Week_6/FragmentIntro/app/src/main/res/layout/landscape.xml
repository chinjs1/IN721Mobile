<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wrapper"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:layout_above="@+id/lvButton"
            android:layout_toEndOf="@+id/lvButton"
            android:layout_below="@+id/ivLayout"
            android:id="@+id/lvLayout"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="516dp"
                android:layout_height="match_parent"
                android:id="@+id/imageLayout"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listLayout">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/ivLayout"
            android:layout_width="match_parent">

            <Button
                android:text="IMAGEVIEW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/ivButton"
                android:textSize="16sp"
                android:layout_weight="1" />

            <Button
                android:text="NBA players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivButton"
                android:layout_toEndOf="@+id/ivButton"
                android:layout_marginStart="22dp"
                android:id="@+id/lvButton"
                android:textSize="16sp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>