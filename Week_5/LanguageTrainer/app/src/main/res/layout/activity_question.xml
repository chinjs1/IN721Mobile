<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="bit.chinjs1.languagetrainer.QuestionActivity">

    <ImageView
        android:id="@+id/ivVisualNoun"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvTitleQuestionNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvTitleQuestionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Question: "
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgNoun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/ivVisualNoun"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/rbDas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rgNoun"
            android:layout_toEndOf="@+id/rgNoun"
            android:layout_weight="1"
            android:checked="true"
            android:text="Das"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold"
            app:buttonTint="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rbDer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rbDie"
            android:layout_below="@+id/rgNoun"
            android:layout_weight="1"
            android:checked="false"
            android:text="Der"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold"
            app:buttonTint="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/rbDie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rgNoun"
            android:layout_below="@+id/rbDer"
            android:layout_weight="1"
            android:text="Die"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold"
            app:buttonTint="@android:color/darker_gray" />

    </RadioGroup>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Submit Answer"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
